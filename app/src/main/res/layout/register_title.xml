<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bage"
    android:id="@+id/view_title"
    >
    <!--沉浸式activity，这个view是用来占位的-->
    <View
        android:id="@+id/position_view"
        android:layout_width="30px"
        android:layout_height="30px" />

    <RelativeLayout
        android:layout_below="@+id/position_view"
        android:layout_width="match_parent"
        android:layout_marginTop="5px"
        android:layout_height="100px">

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="130px"
        android:layout_marginLeft="130px"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:singleLine="true"
        android:text="完善个人资料"
        />

    <ImageView
        android:id="@+id/ibBack"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_centerVertical="true"
        android:padding="16px"
        android:clickable="true"
        android:scaleType="fitXY"
        android:background="@mipmap/nav_btn_back_white_normal" />


    <ImageView
        android:id="@+id/head_rightIv"
        android:layout_width="60px"
        android:layout_height="60px"
        android:padding="20px"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/nav_btn_done_white_normal"
        android:clickable="true" />
    </RelativeLayout>
</RelativeLayout>
